<% if authenticated? %>
  <p>Hello, <%= current_account.name %> (<%= current_account.email %>)!</p>
  <p><%= link_to 'Logout', session_path, method: :delete %></p>
  <p><%= link_to 'Re-Authenticate', new_session_path(re_auth: true) %></p>
<% else %>
  <p><%= link_to 'Login', new_session_path %></p>
<% end %>